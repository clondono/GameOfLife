	var startBtn = document.getElementById('start');
	startBtn.onclick = function() {
			play = self.setInterval(function(){ gameOfLife.nextGen() }, INTERVAL);
			startBtn.disabled = true;
			stopBtn.disabled = false;
	}
	var stopBtn = document.getElementById('stop');
	stopBtn.onclick = function() {
			play = window.clearInterval(play);
			stopBtn.disabled = true;
			startBtn.disabled = false;

	}
			var resetBtn = document.getElementById('reset');
	resetBtn.onclick = function() {
			var userChoice = document.getElementById('choice');
			
			switch(userChoice.options[userChoice.selectedIndex].value){
				case "x":
					gameOfLife.updateBoard(xBoard);
					break;
				case "glider":
				
					gameOfLife.updateBoard(gliderBoard);
					break;
				case "alternate":
					gameOfLife.updateBoard(alternateBoard);
					break;
				case "cross":
					gameOfLife.updateBoard(crossBoard);
					break;
				case "blackout":
					gameOfLife.blackoutBoard();
					break;
				default:
					gameOfLife.clearBoard();
			}
			play = window.clearInterval(play);
			stopBtn.disabled = true;
			startBtn.disabled = false;

	}
